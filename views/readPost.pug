extends layout

block content
    h1 제목
    p= data.title
    h2 내용
    pre= data.content
    h5 게시글 등록시간 : #{moment(data.createTime).format("YYYY-MM-DD HH:mm:ss")}
    h2 댓글
    each val in data.comments
        - var time = moment(val.createTime).format("YYYY-MM-DD HH:mm:ss")
        p= val.comment + ' - ' + val.user + ' (' + time + ')'
    form(action="/createComment?postNumber=" + data.postNumber, method="post")
        input(type="text", name="comment" required)
        button(type="submit") 댓글등록
    br
    button(type="button", onclick="location.href='/updatePost?postNumber=" + data.postNumber + "'") 수정
    button(type="button", onclick="location.href='/deletePost?postNumber=" + data.postNumber + "'") 삭제
    button(type="button", onclick="location.href='/'") 목록