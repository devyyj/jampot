extends layout

block content
  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register
  if (user)
    p You are currently logged in as #{user.username}
    a(href="/logout") Logout
  h1 post list
  table
    tr
      th post number
      th title
      th user
      th create time
    each val in data
      tr
        th #{val.postNumber}
        th
          - var url = "/readPost?postNumber=" + val.postNumber
          a(href=url) #{val.title}
        th #{val.user}
        th #{val.createTime}
  br
  a(href="/createPost") create post