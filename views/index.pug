extends layout

block content
  if (!user)
    a(href="/login") 로그인
    br
    a(href="/register") 회원가입
  if (user)
    p 하이, #{user.username}
    a(href="/logout") 로그아웃
  table(class='table table-hover table-sm')
    thead
      tr
        th(scope='col') No
        th(scope='col') Title
        th(scope='col') ID
        //- th(scope='col') Time
    tbody
      each val in data.docs
        tr
          th(scope='row') #{val.postNumber}
          td(style="word-break: break-all;")
            - var url = "/readPost?postNumber=" + val.postNumber
            a(href=url) #{val.title}
          td #{val.user}
          //- td #{moment(val.createTime).format("YYYY-MM-DD HH:mm:ss")}

  nav(aria-label="Page navigation example")
    ul.pagination.justify-content-center
      if data.hasPrevPage
        li.page-item
          a.page-link(href="/?page="+data.prevPage aria-label="Previous")
            span(aria-hidden="true") &laquo;
      else
        li.page-item.disabled
          a.page-link(href="/?page="+data.prevPage aria-label="Previous")
            span(aria-hidden="true") &laquo;
      li.page-item
        a.page-link #{data.page} / #{data.totalPages}
      if data.hasNextPage
        li.page-item
        a.page-link(href="/?page="+data.nextPage aria-label="Next")
          span(aria-hidden="true") &raquo;  
      else
        li.page-item.disabled
          a.page-link(href="/?page="+data.nextPage aria-label="Next")
            span(aria-hidden="true") &raquo;

  a(href="/createPost") 글쓰기