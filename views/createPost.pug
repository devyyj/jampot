extends layout

block content    
    form(onkeypress="return event.keyCode != 13;" action="/createPost?postNumber=" + data.postNumber, method="post")
        p 제목
        input(type="text", name="title", value= data.title)
        p 내용
        textarea(name="content", cols="30", rows="10")= data.content
        br
        input(type="submit", value="등록")
        input(type="button", value="취소", onclick="location.href='/'")