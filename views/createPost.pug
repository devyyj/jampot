extends layout

block content    
    form(action="/createPost?postNumber=" + data.postNumber, method="post")
        p title
        input(type="text", name="title", value= data.title)
        p content
        textarea(name="content", cols="30", rows="10")= data.content
        br
        input(type="submit", value="submit")
        input(type="button", value="cancel", onclick="location.href='/'")